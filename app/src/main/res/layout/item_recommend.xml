<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/size_5"
        android:clickable="true"
        app:cardCornerRadius="@dimen/size_5"
        app:cardElevation="@dimen/size_5"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/card_recom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pink_blue_gradient">

            <ImageView
                android:id="@+id/recommend_content_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_55"
                android:layout_alignParentBottom="true">

                <com.pratham.prathamdigital.custom.progress_indicators.ProgressLayout
                    android:id="@+id/recom_progressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:autoProgress="true"
                    app:emptyColor="@color/trans_charcoal"
                    app:loadedColor="@color/lavender"
                    app:maxProgress="100" />

                <ImageView
                    android:id="@+id/recom_img_download"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/size_5"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_download_wrapped" />

                <ProgressBar
                    android:id="@+id/recom_progressbar"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/recom_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/recom_img_download"
                    android:layout_toStartOf="@+id/recom_img_download"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="@dimen/size_3"
                    android:textColor="@color/ghost_white"
                    android:textSize="@dimen/size_18sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>