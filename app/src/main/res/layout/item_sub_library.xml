<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_200"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/size_5"
        android:clickable="true"
        android:transitionName="transition_pdf"
        app:cardCornerRadius="@dimen/size_5"
        app:cardElevation="@dimen/size_5"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/card_sub_lib"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pink_blue_gradient">

            <ImageView
                android:id="@+id/sub_lib_content_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_130" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/sub_lib_content_img"
                android:background="@color/trans_charcoal">

                <ImageView
                    android:id="@+id/c_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_dustbin_wrapped" />

                <TextView
                    android:id="@+id/sub_lib_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/size_5"
                    android:layout_toStartOf="@+id/c_delete"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="@dimen/size_3"
                    android:textColor="@color/ghost_white"
                    android:textSize="@dimen/size_18sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>