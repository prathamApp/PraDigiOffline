<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kids_wallpaper_2"
    tools:context="com.pratham.prathamdigital.activities.DashBoard_Activity">

    <RelativeLayout
        android:id="@+id/rl_mylibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.pratham.prathamdigital.custom.custom_fab.FloatingActionButton
            android:id="@+id/fab_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:fab_colorNormal="@color/mustord_yellow"
            app:fab_colorPressed="@color/black_20"
            app:fab_colorRipple="@color/charcoal"
            app:fab_shadowColor="@color/black_20"
            app:srcCompat="@drawable/ic_library_selected_wrapped" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fab_library"
            android:layout_centerHorizontal="true"
            android:text="@string/my_library"
            android:textColor="@color/ghost_white"
            android:textSize="@dimen/size_15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_recommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_32"
        android:layout_marginStart="@dimen/size_32"
        android:clickable="true"
        app:layout_constraintLeft_toRightOf="@+id/rl_mylibrary"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded">

        <com.pratham.prathamdigital.custom.custom_fab.FloatingActionButton
            android:id="@+id/fab_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:fab_colorNormal="@color/mustord_yellow"
            app:fab_colorPressed="@color/black_20"
            app:fab_colorRipple="@color/charcoal"
            app:fab_shadowColor="@color/black_20"
            app:srcCompat="@drawable/ic_recomm_selected_wrapped" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fab_recommend"
            android:layout_centerHorizontal="true"
            android:text="@string/recommended"
            android:textColor="@color/ghost_white"
            android:textSize="@dimen/size_15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dash_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginRight="@dimen/size_8"
        android:clickable="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.pratham.prathamdigital.custom.custom_fab.FloatingActionButton
            android:id="@+id/fab_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:fab_colorNormal="@color/mustord_yellow"
            app:fab_colorPressed="@color/black_20"
            app:fab_colorRipple="@color/charcoal"
            app:fab_shadowColor="@color/black_20"
            app:srcCompat="@drawable/ic_search_50px_sel_wrapped" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fab_search"
            android:layout_centerHorizontal="true"
            android:text="@string/search"
            android:textColor="@color/ghost_white"
            android:textSize="@dimen/size_15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="@dimen/size_8"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded">

        <com.pratham.prathamdigital.custom.custom_fab.FloatingActionButton
            android:id="@+id/fab_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:transitionName="transition_dialog"
            app:fab_colorNormal="@color/mustord_yellow"
            app:fab_colorPressed="@color/black_20"
            app:fab_colorRipple="@color/charcoal"
            app:fab_shadowColor="@color/black_20"
            app:srcCompat="@drawable/ic_language_wrapped" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fab_language"
            android:layout_centerHorizontal="true"
            android:text="@string/language"
            android:textColor="@color/ghost_white"
            android:textSize="@dimen/size_15sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginRight="@dimen/size_8"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginTop="@dimen/size_8"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_mylibrary" />
</android.support.constraint.ConstraintLayout>
