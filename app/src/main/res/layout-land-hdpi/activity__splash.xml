<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pratham.prathamdigital.activities.Activity_Splash">

    <com.eftimoff.androipathview.PathView
        android:id="@+id/img_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginRight="@dimen/size_8"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginTop="@dimen/size_8"
        app:pathColor="@color/charcoal"
        app:pathWidth=".8dp"
        app:svg="@raw/splash_screen"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/btn_google_login" />

    <Button
        android:id="@+id/btn_google_login"
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_50"
        android:layout_marginBottom="@dimen/size_8"
        android:background="@drawable/google_button_bkgd"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_google_wrapped"
        android:drawableStart="@drawable/ic_google_wrapped"
        android:paddingEnd="@dimen/size_8"
        android:paddingLeft="@dimen/size_8"
        android:paddingRight="@dimen/size_8"
        android:paddingStart="@dimen/size_8"
        android:text="@string/Sign_In"
        android:textAllCaps="false"
        android:textColor="@color/ghost_white"
        android:textSize="@dimen/size_17sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
